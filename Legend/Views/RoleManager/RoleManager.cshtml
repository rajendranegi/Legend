@using LegendBLL
@model RoleManagerModel

@{
    ViewBag.Title = "Index";
}
<div class="clearfix">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4 col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4">
        <ul class="list-group">
            @if (Model.roleManagerList != null && Model.roleManagerList.Count > 0)
            {
                int count = 0;
                foreach (var item in Model.roleManagerList)
                {
                    if (count == 0)
                    {
                        <li class="list-group-item active">
                            <div class="col-xs-12 text-center">
                                Current Role: @Html.DisplayFor(m => item.AccessName)
                            </div>
                        </li>
                    }
                    else
                    {
                        <li class="list-group-item clearfix">
                            @using (Html.BeginForm("RoleManager", "RoleManager", new { AccID = item.AccessID, AccName = item.AccessName }, FormMethod.Post))
                            {
                                <input type="submit" value="Secondary Role: @Html.DisplayFor(m => item.AccessName)" class="btn btn-block clearfix"
                                       onclick="return confirm('Are you sure to change your role')" />
                            }
                        </li>                        
                    }
                    count++;
                }
            }

    </ul>
</div>
</div>
